doctype html
block vars
  - var bodyclass = null;

mixin menu(current)
  ul.menu
    li.menu-link(class= current === "index" ? "active" : "")
      a.name(href="/") Home
    li.menu-link(class= current === "cv" ? "active" : "")
      a.name(href="/cv.html") CV
    li.menu-link(class= current === "projects" ? "active" : "")
      a.name(href="/projects.html") Projects
    li.menu-link(class= current === "tutorials" ? "active" : "")
      a.name(href="/tutorials.html") Tutorials
    li.menu-link(class= current === "about" ? "active" : "")
      a.name(href="/about.html") About

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      meta(http-equiv="cache-control" content="max-age=3600")
      meta(http-equiv="cache-control" content="no-cache")
      meta(http-equiv="expires" content="0")
      meta(http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT")
      meta(http-equiv="pragma" content="no-cache")
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
      link(rel='stylesheet', href=contents.css['main.css'].url)
      link(rel='stylesheet', href=contents.css['layout.css'].url)
      link(rel="stylesheet", href=contents.css['font-awesome.min.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
              span(class="blink") |
            p.description= locals.description
    div#menu-bar
      div.content-wrap
        block menu
    div#content
      div.content-wrap
        block content
          h2 Welcome to rahul's backyard!
    footer
      script(type='text/javascript').
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-98207720-1', 'auto');
        ga('send', 'pageview');
      div.content-wrap
        block footer
          section.about
            !=contents['footer.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
